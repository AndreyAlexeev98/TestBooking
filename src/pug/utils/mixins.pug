mixin item(title, description)
  .item
    h2(class="item-title")= title
    p(class="item-description")= description

mixin changePlaceBtn(place, checked)
  label.radioBtn__item 
    input.radioBtn__hidden(type="radio" name='place' value=`место - ${place}` checked= checked)
    div.radioBtn__visible= place

mixin address(number, address)
  label.address-choice__item
    input.address-choice__hidden(type="radio" name='address' value= address)
    .address-choice__visible
    .address-choice__name-wrap
      .controls__name= number
      div.address-choice__name= address

mixin navigation(dl_class, link_class)
  nav(class = 'nav', class = dl_class)
    - var items = [["Обо мне","about"], ["Навыки","values-sec"], ["Работы","works-sec"], ["Отзывы","feedback-sec"], ["Связаться со мной","feedback-sec-form"]];
    ul.nav__list
      each item in items
        li.nav__item
          a(href='#'+item[1], class = link_class).nav__link #{item[0]}

